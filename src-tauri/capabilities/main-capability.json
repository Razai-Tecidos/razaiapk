{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window: enable dialog.save and fs write to user folders",
  "windows": ["main"],
  "permissions": [
    "http:default",
    "dialog:default",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-write",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "fs:allow-desktop-write",
    "fs:allow-document-write",
    "fs:allow-download-write",
    "fs:allow-home-write",
    { "identifier": "fs:scope", "allow": [
      { "path": "$HOME/**/*" },
      { "path": "$DESKTOP/**/*" },
      { "path": "$DOCUMENT/**/*" },
      { "path": "$DOWNLOAD/**/*" },
      { "path": "$PICTURE/**/*" },
      { "path": "$VIDEO/**/*" }
    ]}
  ]
}
